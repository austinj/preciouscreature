---
import { Astronav, MenuItems, MenuIcon, Dropdown, DropdownItems, DropdownSubmenu, StickyHeader } from "astro-navbar";
---


<StickyHeader
  class="sticky top-0 border-b z-20 transition-all bg-tan"
  scrollY={40}
  defaultClass="py-1 border-black"
  activeClass="bg-white/10 border-gray-200 backdrop-blur-lg border-transparent">
<header class="lg:flex justify-between p-3 lg:p-2 gap-5 mx-auto container">
  <Astronav closeOnClick>
    <div class="flex w-full lg:w-auto justify-between">
      <a class="font-serif text-2xl tracking-wide" href="/">precious creature</a>
      <div class="block lg:hidden">
        <MenuIcon class="w-4 h-4 mt-2 text-gray-800" />
      </div>
    </div>
    <MenuItems class="hidden lg:flex lg:pt-1 text-lg font-bold">
      <ul class="flex flex-col lg:flex-row lg:gap-5">
        <li>
          <Dropdown class="group">
            <button class="flex items-center -mb-1">
              <span>Preservation</span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="3"
                stroke="currentColor"
                class="w-3 h-3 mt-0.5 ml-1 group-open:rotate-180">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
              </svg>
            </button>
            <DropdownItems class="relative">
              <div
                class="lg:absolute lg:bg-tan top-2 w-40 lg:border pl-3 lg:shadow rounded lg:p-3 font-normal">
                <ul>
                  <li class="-mb-1">
                    <a href="/preservation">Overview</a>
                  </li>
                  <li class="-mb-1">
                    <a href="/fur">Coat</a>
                  </li>
                  <li class="-mb-1">
                    <a href="/casts">Casts</a>
                  </li>
                  <li class="-mb-1">
                    <a href="/bones">Skeleton</a>
                  </li>
                  <li>
                    <a href="/full">Taxidermy</a>
                  </li>
                </ul>
              </div>
            </DropdownItems>
          </Dropdown>
        </li>
        <li class="-mb-1">
          <a href="/cremation">Cremation</a>
        </li>
        <li>
          <Dropdown class="group">
            <button class="flex items-center -mb-1">
              <span>Learn</span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="3"
                stroke="currentColor"
                class="w-3 h-3 mt-0.5 ml-1 group-open:rotate-180">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
              </svg>
            </button>
            <DropdownItems class="relative">
              <div
                class="lg:absolute lg:bg-tan top-2 w-40 lg:border pl-3 lg:shadow rounded lg:p-3 font-normal">
                <ul>
                  <li class="-mb-1">
                    <a href="/about">About</a>
                  </li>
                  <li class="-mb-1">
                    <a href="/process">Our Process</a>
                  </li>
                  <li class="-mb-1">
                    <a href="/grief">Grief</a>
                  </li>
                  <li>
                    <a href="/faq">FAQ</a>
                  </li>
                </ul>
              </div>
            </DropdownItems>
          </Dropdown>
          <li class="-mb-1">
            <a href="/contact">Contact</a>
          </li>
          <li class="-mb-1">
            <a href="https://family.preciouscreature.com/">Login</a>
          </li>
        </li>
      </ul>
    </MenuItems>
  </Astronav>
</header>
</StickyHeader>