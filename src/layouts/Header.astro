---
import {
  Astronav,
  MenuItems,
  MenuIcon,
  Dropdown,
  DropdownItems,
  StickyHeader,
} from "astro-navbar";
---

<StickyHeader
  class="sticky top-0 z-20 border-b bg-tan transition-all"
  scrollY={40}
  defaultClass="py-2 lg:py-3"
  activeClass="bg-white/10 border-gray-200 backdrop-blur-lg border-transparent"
>
  <header class="container px-10 justify-around flex">
    <Astronav closeOnClick>
      <div class="flex w-full justify-between md:w-auto">
        <a class="font-serif text-2xl tracking-wide" href="/"
          >precious creature</a
        >
        <div class="block md:hidden">
          <MenuIcon class="mt-2 h-4 w-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden text-lg md:flex md:pt-1">
        <ul class="flex flex-col md:flex-row md:gap-5">
          <li>
            <Dropdown class="group">
              <button class="-mb-1 flex items-center">
                <span>Preservation</span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="3"
                  stroke="currentColor"
                  class="ml-1 mt-0.5 h-3 w-3 group-open:rotate-180"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
                </svg>
              </button>
              <DropdownItems class="relative">
                <div
                  class="top-2 w-40 rounded pl-3 font-normal md:absolute md:border md:bg-tan md:p-3 md:shadow"
                >
                  <ul>
                    <li class="-mb-1">
                      <a href="/preservation">Overview</a>
                    </li>
                    <li class="-mb-1">
                      <a href="/fur">Coat</a>
                    </li>
                    <li class="-mb-1">
                      <a href="/casts">Casts</a>
                    </li>
                    <li class="-mb-1">
                      <a href="/bones">Skeleton</a>
                    </li>
                    <li>
                      <a href="/full">Taxidermy</a>
                    </li>
                  </ul>
                </div>
              </DropdownItems>
            </Dropdown>
          </li>
          <li class="-mb-1">
            <a href="/cremation">Cremation</a>
          </li>
          <li>
            <Dropdown class="group">
              <button class="-mb-1 flex items-center">
                <span>Learn</span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="3"
                  stroke="currentColor"
                  class="ml-1 mt-0.5 h-3 w-3 group-open:rotate-180"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
                </svg>
              </button>
              <DropdownItems class="relative">
                <div
                  class="top-2 w-40 rounded pl-3 font-normal md:absolute md:border md:bg-tan md:p-3 md:shadow"
                >
                  <ul>
                    <li class="-mb-1">
                      <a href="/about">About</a>
                    </li>
                    <li class="-mb-1">
                      <a href="/grief">Grief</a>
                    </li>
                    <li>
                      <a href="/faq">FAQ</a>
                    </li>
                  </ul>
                </div>
              </DropdownItems>
            </Dropdown>
            <li class="-mb-1">
              <a href="/contact">Contact</a>
            </li>
            <li class="-mb-1">
              <a href="https://family.preciouscreature.com/">Login</a>
            </li>
          </li>
        </ul>
      </MenuItems>
    </Astronav>
  </header>
</StickyHeader>
