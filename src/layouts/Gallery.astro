---
import Layout from "../layouts/Base.astro";
import "../styles/index.css";
import 'photoswipe/style.css'
import 'photoswipe-dynamic-caption-plugin/photoswipe-dynamic-caption-plugin.css';
---

<Layout title="TITLE">

  <div class="px-4 py-4 font-display text-4xl">
    <strong>
      <slot name="title" /> 
    </strong>
  </div>
  <div class="px-4 pt-4 font-display text-lg">
    IMGSUBTITLE
  </div>
  <div class="px-4 pt-4">
    IMGDESC
  <div id="my-gallery" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 pt-4 justify-items-center gap-y-4">
    <slot />
  </div>
</div>

<script src="../scripts/lightbox.js"></script>

</Layout>
